<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    Task 5-->

    <bean id="actorObj" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="vijay" />
        <constructor-arg name="gender" value="male" />
        <constructor-arg name="age" value="36" />
    </bean>

    <bean id="movieObj" class="com.stackroute.domain.Movie" >
        <constructor-arg name="actorObj" ref="actorObj" />
    </bean>

    <bean id="beanPostProcessorDemo" class="com.stackroute.domain.BeanPostProcessorDemoBean" />

</beans>